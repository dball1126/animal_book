<h2>Sign In</h2>
<form action="<%= session_url %>" method="POST">
    <%= auth_token_input %>

    <label for="user_username">Username
        <input type="text" name="user[username]" value="" id="user_username">
    </label>

    <label>Email
        <input type="text" name="user[email]" value="">
    </label>

    <label for="user_password">Password
        <input type="text" name="user[password]" value="" id="user_password">
    </label>

    <input type="submit" value="Sign In">
</form>